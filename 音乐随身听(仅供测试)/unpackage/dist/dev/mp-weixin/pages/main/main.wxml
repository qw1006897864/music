<view class="content"><view class="search-content"><image class="search-img" src="/static/img/icon/search.png"></image><input class="search-input" confirm-type="search" placeholder-class="search-placeholder" placeholder="搜索歌手、歌曲、专辑、歌单"/></view><swiper class="swiper-content" indicator-dots indicator-color="rgba(255,255,255,.5)" indicator-active-color="rgba(255,255,255,.8)" autoplay circular interval="3000" duration="500"><block wx:for="{{carouselList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item data-event-opts="{{[['tap',[['selectRecommendList',['$0'],[[['carouselList','',index]]]]]]]}}" bindtap="__e"><image class="image-auto" src="{{item.picUrl}}"></image></swiper-item></block></swiper><view class="list-type"><block wx:for="{{listType}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectType',['$0'],[[['listType','',index]]]]]]]}}" class="list-type-item" bindtap="__e"><image class="list-type-image" src="{{item.src}}"></image><text>{{item.name}}</text></view></block></view><view class="recommend"><view class="recommend-title"><text>歌单推荐</text><text data-event-opts="{{[['tap',[['moreRecommend',['$event']]]]]}}" class="more" bindtap="__e">更多</text></view><view class="recommend-content"><block wx:for="{{recommendList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectRecommendSong',['$0'],[[['recommendList','',index]]]]]]]}}" class="recommend-item" bindtap="__e"><image class="recommend-item-image" src="{{item.imgurl}}" lazy-load="true"></image><view class="recommend-listen-num"><image src="/static/img/icon/home/headset.png"></image><text>{{item.listennum}}</text></view><view class="recommend-item-title"><text>{{item.dissname+''}}</text></view></view></block></view><view class="recommend-footer"><text data-event-opts="{{[['tap',[['changeRecommend',['$event']]]]]}}" bindtap="__e">换一批</text></view></view></view>